<p id="notice"><%= notice %></p>

<h1>Listing Dragon Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short word</th>
      <th>For 2 players</th>
      <th>For 3 players</th>
      <th>For 4 players</th>
      <th>Main text</th>
      <th>Flavor text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dragon_cards.each do |dragon_card| %>
      <tr>
        <td><%= dragon_card.name %></td>
        <td><%= dragon_card.short_word %></td>
        <td><%= dragon_card.for_2_players %></td>
        <td><%= dragon_card.for_3_players %></td>
        <td><%= dragon_card.for_4_players %></td>
        <td><%= dragon_card.main_text %></td>
        <td><%= dragon_card.flavor_text %></td>
        <td><%= link_to 'Show', dragon_card %></td>
        <td><%= link_to 'Edit', edit_dragon_card_path(dragon_card) %></td>
        <td><%= link_to 'Destroy', dragon_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

